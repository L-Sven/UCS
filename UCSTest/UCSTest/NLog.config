<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Trace" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>
  
  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <!-- <target name="dblog" xsi:type="Database" dbUserName="sa" dbProvider="System.Data.SqlClient-" dbPassword="Ucstest2018" useTransactions="false" 
            connectionString="Data Source=SIMONJO-6570B\UCSTEST;Initial Catalog=UCSTest;Persist Security Info=True;User ID=sa;Password=Ucstest2018"
            connectionStringName="dbCon" keepConnection="true" dbDatabase="UCSTest.dbo" dbHost="simonjo-6570b" 
            installConnectionString="" commandText="INSERT INTO Log 
            (LogDate, Level, Message, CallSite, Exception)
            VALUES 
            ()"/> -->

    
    
    <target name="logfile" xsi:type="File" fileName="${basedir}Errorlog ${shortdate}.txt" layout="
        -------------- ${level} (${longdate}) --------------${newline}
        ${newline}
        Call Site: ${callsite}${newline}
        Exception Type: ${exception:format=Type}${newline}
        Exception Message: ${exception:format=Message}${newline}
        Stack Trace: ${exception:format=StackTrace}${newline}
        Additional Info: ${message}${newline}" />
    <target name="logconsole" xsi:type="Console" />

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
  </targets>

  <rules>
    <!-- add your logging rules here -->

    <logger name="*" minlevel="Debug" writeTo="logfile" />
    
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>
